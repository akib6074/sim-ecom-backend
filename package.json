{
  "name": "ecom-backend",
  "version": "1.0.0",
  "description": "ecom backend micro-services server",
  "author": "simec system ltd.",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "be-user:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-user/main.ts",
    "be-user:prod": "node dist/be-user/main",
    "be-catelog:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-catelog/main.ts",
    "be-catelog:prod": "node dist/be-catelog/main",
    "be-core:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-core/main.ts",
    "be-core:prod": "node dist/be-core/main",
    "be-image:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-image/main.ts",
    "be-image:prod": "node dist/be-image/main",
    "be-payment:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-payment/main.ts",
    "be-payment:prod": "node dist/be-payment/main",
    "be-search:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-search/main.ts",
    "be-search:prod": "node dist/be-search/main",
    "be-notification:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-notification/main.ts",
    "be-notification:prod": "node dist/be-notification/main",
    "be-cron-job:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-cron-job/main.ts",
    "be-cron-job:prod": "node dist/be-cron-job/main",
    "be-order:dev": "NODE_ENV=development tsnd --respawn --transpile-only src/be-order/main.ts",
    "be-order:prod": "node dist/be-order/main",
    "be-solr:start": "cd ../ecom-solr && yarn run start",
    "be-solr:stop": "cd ../ecom-solr && yarn run stop",
    "prechange": "cd ../ecom-common && yarn run build",
    "change": "rimraf node_modules && yarn install",
    "prechange:offline": "cd ../ecom-common && yarn run build",
    "change:offline": "rimraf node_modules/@simec && mkdir node_modules/@simec && cp -r -t node_modules/@simec ../ecom-common",
    "preinstall:all": "cd ../ecom-common && rimraf node_modules && yarn install && yarn run build && cd ../ecom-frontend && rimraf node_modules && yarn install",
    "install:all": "rimraf node_modules && yarn install",
    "presetup": "cd ../ecom-common && yarn run build && cd ../ecom-frontend && yarn build",
    "setup": "yarn run build",
    "seeder:dev": "NODE_ENV=development tsnd src/seeder/main.ts",
    "postseeder:dev": "NODE_ENV=development yarn run solr:import:dev",
    "seeder:prod": "node dist/seeder/main",
    "postseeder:prod": "yarn run solr:import:prod",
    "solr:import:dev": "NODE_ENV=development tsnd --transpile-only src/solr/main-dev.ts",
    "solr:import:prod": "node dist/solr/main-prod",
    "prefaker:dev": "NODE_ENV=development yarn run seeder:dev",
    "faker:dev": "NODE_ENV=development tsnd --transpile-only src/faker/main.ts",
    "postfaker:dev": "NODE_ENV=development yarn run solr:import:dev",
    "faker:prod": "yarn run seeder:prod && node dist/faker/main",
    "postfaker:prod": "yarn run solr:import:prod",
    "start:dev": "cd src && chmod +x main-dev:start.sh && ./main-dev:start.sh",
    "stop:dev": "cd src && chmod +x main-dev:stop.sh && ./main-dev:stop.sh",
    "start:server": "node dist/main",
    "stop:server": "pm2 delete all && yarn run be-solr:stop"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^4.8.0",
    "@simec/ecom-common": "file:../ecom-common",
    "@types/cron": "^1.7.3",
    "cache-manager": "^3.4.3",
    "gm": "^1.23.1",
    "multer": "^1.4.2",
    "nestjs-redis": "^1.3.3",
    "nodemailer": "^6.5.0",
    "redis": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.7",
    "solr-client": "^0.8.0",
    "sslcommerz-nodejs": "^1.0.8",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/cache-manager": "^3.4.0",
    "@types/express": "^4.17.11",
    "@types/gm": "^1.18.9",
    "@types/jest": "^26.0.22",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.39",
    "@types/nodemailer": "^6.4.1",
    "@types/solr-client": "^0.7.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cache-manager-redis-store": "^2.0.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "kill-port": "^1.6.1",
    "prettier": "^2.2.1",
    "random-location": "^1.1.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "ttab": "^0.7.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
